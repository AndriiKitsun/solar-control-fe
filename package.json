{
  "name": "solar-control-fe",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --no-watch",
    "test:watch": "ng test",
    "test:coverage": "ng test --no-watch --code-coverage",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadless",
    "lint": "concurrently \"npm run eslint\" \"npm run stylelint\" \"npm run translation\"",
    "eslint": "ng lint",
    "eslint:fix": "ng lint --fix",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "npm run stylelint -- --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "translation": "node scripts/lint-translation.js",
    "translation:fix": "node scripts/lint-translation.js --fix",
    "deploy": "ng deploy",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts|*.html": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@jsverse/transloco": "^7.5.0",
    "@primeng/themes": "^18.0.0-rc.1",
    "primeicons": "^7.0.0",
    "primeng": "^18.0.0-rc.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.5",
    "@angular/cli": "^18.2.5",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "^19.0.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.6",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^3.4.15",
    "tailwindcss-primeui": "^0.3.4",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.17.0"
  }
}
